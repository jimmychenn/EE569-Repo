	@echo "Problem 1 Part a Part 1"
	@echo "compiling and linking code"
	$(CC) -c q1a1.cpp
	$(LN) q1a1.o -o solution1a
	@echo "to run program syntax is: "program_name input_image.raw output_image.raw [BytesPerPixel] [Width, Height]""

